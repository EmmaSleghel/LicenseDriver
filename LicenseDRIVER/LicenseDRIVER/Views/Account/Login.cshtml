@model LoginViewModel
@{
    ViewBag.Title = "Login";
}

<body class="body_img">
    <div class="container">
        <div class="row">
            <br /><br />
            <br /><br />
            <div class="col-sm-3"></div>
            <div class="col-sm-6">
                <div class="pading_log">
                    <div class="card w3-round">

                        <header class="w3-container w3-black w3-round">
                            <h1 class="w3-center">Login  <img align="top" src="~/images/icon.png" /></h1>
                        </header>
                        <br />
                        <div class="w3-container w3-white w3-round ">
                            <form method="post" asp-controller="Account" asp-action="Login"
                                  asp-route-returnurl="@Model.ReturnUrl">
                                <br />
                                <p>
                                    <input asp-for="@Model.Username" class="w3-input w3-border w3-round w3-sand w3-large glyphicon " type="text" placeholder="&#xe008; Username">
                                    <span asp-validation-for="@Model.Username"></span>
                                </p>
                                <p>
                                    <input asp-for="@Model.Password" class="w3-input w3-border w3-round w3-sand w3-large glyphicon" type="password" placeholder="&#xe033; Password">
                                    <span asp-validation-for="@Model.Password"></span>
                                </p>
                                <br />
                                <div class="w3-row ">
                                    <div class="w3-container w3-half  ">
                                        <div class="w3-container ">
                                            <select asp-for="@Model.Type" class="w3-select w3-border-brown w3-hover-border-brown">
                                                <option value="" disabled selected>Profesor or Student ?</option>
                                                <option value="1">Student</option>
                                                <option value="2">Profesor</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="w3-container w3-half  ">
                                        <div class="w3-container ">
                                            <input class="w3-button w3-block w3-deep-orange w3-round " type="submit" value="Let me in" />
                                        </div>
                                    </div>
                                    <div class="w3-container w3-half  ">
                                        <div class="label1">
                                            <label asp-for="RememberMe"></label>
                                            <input asp-for="RememberMe" class="w3-check" type="checkbox" />
                                            <span asp-validation-for="RememberMe"></span>
                                        </div>
                                    </div>
                                </div>
                            </form>
                            <br />
                        </div>

                        <br /><br />
                    </div>
                        <div class="label1"><a asp-controller="Account" asp-action="Register"><span class="glyphicon glyphicon-user "></span><b>If you don't have an account Sign Up here</b></a></div>
                    
                </div>
            </div>
            <div class="col-sm-3">
            </div>
        </div>
    </div>
    <br /><br /><br /><br /><br />
    <footer class="text-center">
        <p>&copy; 2018 - LicenseDRIVER</p>
    </footer>
</body>

